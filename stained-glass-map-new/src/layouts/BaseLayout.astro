---
/**
 * Base Layout Component
 *
 * Wraps all pages with:
 * - HTML head with metadata
 * - Google Fonts (Playfair Display, Inter)
 * - Mapbox CSS
 * - Global styles
 * - Celtic corner ornaments
 */

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Mapping Ireland's Stained Glass Ecosystem - Discover historic stained glass windows across Ireland"
} = Astro.props;

const fullTitle = title === "Home" ? "Stained Glass Map" : `${title} | Stained Glass Map`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <title>{fullTitle}</title>

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Stained Glass Map" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/HighQualityCelticCornerDesign.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Mapbox GL CSS -->
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v3.1.0/mapbox-gl.css"
      rel="stylesheet"
    />

    <!-- Global Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <!-- Celtic Corner Ornaments -->
    <img
      src="/HighQualityCelticCornerDesign.svg"
      alt=""
      class="celtic-corner celtic-corner-top-left"
      aria-hidden="true"
    />
    <img
      src="/HighQualityCelticCornerDesign.svg"
      alt=""
      class="celtic-corner celtic-corner-top-right"
      aria-hidden="true"
    />
    <img
      src="/HighQualityCelticCornerDesign.svg"
      alt=""
      class="celtic-corner celtic-corner-bottom-left"
      aria-hidden="true"
    />
    <img
      src="/HighQualityCelticCornerDesign.svg"
      alt=""
      class="celtic-corner celtic-corner-bottom-right"
      aria-hidden="true"
    />

    <!-- Page Content -->
    <slot />
  </body>
</html>
