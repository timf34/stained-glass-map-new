---
/**
 * Celtic Header Component
 *
 * Displays the ornamental title header with:
 * - Celtic header title SVG
 * - Navigation links
 * - "Add a Location" button
 */
---

<header class="header">
  <a href="/" class="header-title-link">
    <h2 class="header-title">Stained Glass Map</h2>
  </a>

  <!-- Navigation -->
  <nav class="header-nav">
    <a href="/about" class="nav-link">About</a>
    <a href="/artists" class="nav-link">Artists</a>
    <a
      href="https://forms.google.com"
      target="_blank"
      rel="noopener noreferrer"
      class="nav-link nav-link-primary"
    >
      Add a Location
    </a>
  </nav>
</header>

<style>
  .header {
    position: relative;
    padding: var(--spacing-xs) var(--spacing-xl);
    text-align: center;
    background: var(--color-parchment);
    border-bottom: 1px solid rgba(201, 169, 97, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-title-link {
    text-decoration: none;
  }

  .header-title {
    margin: 0;
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-ornament-gold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.2s ease;
  }

  .header-title-link:hover .header-title {
    color: var(--color-accent-brown);
  }

  .header-nav {
    position: absolute;
    right: 100px;
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    z-index: 1000;
  }

  .nav-link {
    padding: var(--spacing-xs) var(--spacing-md);
    background: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    color: var(--color-text-primary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all var(--transition-normal);
  }

  .nav-link:hover {
    color: var(--color-ornament-gold);
  }

  .nav-link-primary {
    background: transparent;
    border: 1px solid var(--color-ornament-gold);
    color: var(--color-ornament-gold);
  }

  .nav-link-primary:hover {
    background: var(--color-ornament-gold);
    color: var(--color-card-bg);
    border-color: var(--color-ornament-gold);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(201, 169, 97, 0.3);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .header {
      padding: 10px 16px;
      justify-content: space-between;
    }

    .header-title {
      font-size: 1.1rem;
      letter-spacing: 0.05em;
    }

    .header-nav {
      position: static;
      gap: 8px;
    }

    .nav-link {
      padding: 6px 10px;
      font-size: 0.8rem;
    }

    .nav-link-primary {
      padding: 6px 12px;
    }
  }

  @media (max-width: 480px) {
    .nav-link:not(.nav-link-primary) {
      /* Hide "Artists" text on very small screens, keep button */
      padding: 6px 8px;
    }
  }
</style>
